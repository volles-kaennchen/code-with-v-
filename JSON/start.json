<!--  API Sprache  --> 

{
	"name":"Text",	                #string
	"alter": 16,				            #integer
	"kennt json": true/false		    #boolean
}

<!--  Array [ ]  -->  
<!--  mehrere json datensätze in einer datei  --> 

[
